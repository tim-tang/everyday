<div id="content">
  <div class="content_box">
    <h2><%= t('.ibook')%></h2>
    <h6><em><%= t(".moto")%></em></h6>
    <div class="cleaner_h40"></div>
    <div id="gallery">
      <% @total_ibooks.each do |ibook|%>
        <div class="gallery_box">
          <div class="left post_img">
            <p>
            <%= image_tag ibook.image_url%>
            </p>
          </div>
          <div class="right">
            <h6><%= ibook.ibook_file_name%></h6>
            <div><%= image_tag "tag.png", :style=>"absmiddle"%>
              <% ibook.tag_list.each do |tag|%>
                <span class="highlighted"><%= link_to tag, {:action=>:tag_ibook_list, :id=>tag}, :title=>"Tags" %></span>
              <% end %>
              <p><%= ibook.desc%></p> </div>
            <div align="right"><em><%= t('.size')%>: <%= (ibook.ibook_file_size/(1024*1024.0)).round(2)%>MB || <%= t('.downloads')%>&raquo; <%= ibook.download_count%>  </em> <%= link_to image_tag("download.png", :alt=>"download",:style=>"absmiddle", :title=>"download"), {:action =>:download, :id=>ibook.id}%></div>
          </div>
          <div class="cleaner"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="cleaner"></div>
  <div class="flickr_pagination">
    <%= will_paginate @total_ibooks,:class=>"pagination" %>
  </div>
</div>
