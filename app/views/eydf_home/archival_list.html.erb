<h2>Archival Listing</h2>
<div class="dotted_dash"></div>
<% @total_blogs.each do |blog|%>
  <p>
  <%= image_tag "tag.png", :align=>"absmiddle"%> 
  <% blog.tag_list.each do |tag|%>
    <span class="highlighted"><%= link_to tag, {:action=>:tag_list, :id=>tag}, :title=>"Tags" %></span>
  <% end %>
  <span style="float:right"><strong><%= blog.updated_at.strftime("%Y-%m-%d %H:%M:%S")%></strong></span>
  </p>
  <br/>
  <h3><%= blog.title%></h3>
  <%=simple_format truncate(rich_content(blog.content), :length=>60)%>
  <%= link_to image_tag("play.png")+"Read More ...", show_blog_path(blog),:title=>"Read More ...", :style=>"float:right" %>
  <div class="dotted_line"></div>
<% end %>
<br/>
<div class="flickr_pagination">
  <%= will_paginate @total_blogs,:class=>"pagination" %>
</div>
<br/>
