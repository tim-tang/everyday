<div class="post_meta">
  <p><span><%= image_tag "user.png", :align=>"absmiddle"%>&nbsp;<%= blog.author%></span></p>
  <p><span><%= image_tag "calendar.png", :align=>"absmiddle"%>&nbsp;<%= blog.created_at.strftime("%Y-%m-%d %A %H:%M:%S")%></span></p>
  <p><span><%= image_tag "user_comment.png", :align=>"absmiddle"%>&nbsp;<%= link_to cached_comments(blog).to_s+t('.comm_num'), show_blog_path(blog), :title=>"Post Comments"%></span></p>
  <p><span> <%= image_tag "tag.png", :align=>"absmiddle"%>&nbsp;
    <% cached_tags(blog).each do |tag|%>
      <%= link_to tag, {:action => :tag_list, :id=>tag}, :title=>"Tags" %>
    <% end %> 
    <span>
  </p>
  <p><span><%= image_tag "category.png", :align=>"absmiddle" %>&nbsp;<%= link_to cached_categories(blog).category, {:action => :category_list, :id=> cached_categories(blog).id}, :title=>"Categories"%></span></p>
  <p><span><%= image_tag "calculator.png", :align=>"absmiddle"%>&nbsp;<%= blog.view_count%> <%= t('.viewer')%></span></p>
